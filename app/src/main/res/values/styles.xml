<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="closeSesionButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:text">Cerrar sesión</item>
        <item name="strokeColor">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="deleteUserButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:text">Eliminar usuario</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="loginFields" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/black</item>
        <item name="cursorColor">@color/black</item>
        <item name="startIconTint">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="passwordField" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/black</item>
        <item name="cursorColor">@color/black</item>
        <item name="startIconTint">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperText">La contraseña debe contener mínimo 6 caracteres</item>
        <item name="helperTextTextColor">@color/white</item>
    </style>
</resources>