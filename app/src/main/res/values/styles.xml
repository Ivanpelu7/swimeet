<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="closeSesionButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/design_default_color_error</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:text">Cerrar sesión</item>
        <item name="strokeColor">@color/design_default_color_error</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="deleteUserButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/quantum_white_text</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:text">Eliminar usuario</item>
        <item name="backgroundTint">@color/design_default_color_error</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="loginFields" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/md_theme_surfaceContainerHigh</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/md_theme_onSurfaceVariant</item>
        <item name="hintTextColor">@color/md_theme_onSurfaceVariant</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/md_theme_onSurfaceVariant</item>
        <item name="cursorColor">@color/md_theme_onSurfaceVariant</item>
        <item name="startIconTint">@color/md_theme_onSurfaceVariant</item>
        <item name="boxStrokeColor">@color/md_theme_primary</item>
    </style>

    <style name="passwordField" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/md_theme_surfaceContainerHigh</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/md_theme_onSurfaceVariant</item>
        <item name="hintTextColor">@color/md_theme_onSurfaceVariant</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/md_theme_onSurfaceVariant</item>
        <item name="cursorColor">@color/md_theme_onSurfaceVariant</item>
        <item name="startIconTint">@color/md_theme_onSurfaceVariant</item>
        <item name="boxStrokeColor">@color/md_theme_primary</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperText">Mínimo 6 caracteres</item>
        <item name="helperTextTextAppearance">@style/HelperTextStyle</item>
        <item name="helperTextTextColor">@color/md_theme_onSurface</item>
    </style>

    <style name="HelperTextStyle" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/md_theme_onSurface</item>
        <item name="android:background">@color/md_theme_surface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
</resources>